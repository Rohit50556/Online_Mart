@model online_mart.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .login{
        margin-top:60px;
    }
</style>
`<div class="login">
    <h1>Login</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <div style="color:red;">
                    @ViewBag.Error
                </div>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot Password??<txt style="color:blue;">Click Here</txt></a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Do not Have Account??<txt style="color:blue;">Register</txt></a>
                
            </form>
        </div>
    </div>
</div>
<div>
    
</div>