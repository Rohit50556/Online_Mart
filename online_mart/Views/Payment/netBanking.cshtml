@model online_mart.Models.netBankingClass

@{
    ViewData["Title"] = "netBanking";
}
<style>
    .pay {
        margin-top: 60px;
    }
</style>
<div class="pay"></div>
    <h1>Credit Card</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="netBanking">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CardNo" class="control-label"></label>
                    <input asp-for="CardNo" class="form-control" placeholder="xxxx xxxx xxxx xxxx"/>
                    <span asp-validation-for="CardNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Expiration" class="control-label"></label>
                    <input asp-for="Expiration" class="form-control" />
                    <span asp-validation-for="Expiration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CVV" class="control-label"></label>
                    <input asp-for="CVV" class="form-control" />
                    <span asp-validation-for="CVV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Pay" class="btn btn-primary" />
                </div>
                <div style="color:red;">
                    @ViewBag.Error
                </div>
            </form>
        </div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
